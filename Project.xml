<?xml version="1.0" encoding="utf-8"?>
<project>
    <meta title="AlienZone2"
          package="com.darkoverlordofdata.alienzone2"
          version="0.0.1"
          company="Dark Overlord of Data"
            />

    <!--

               _____  .__  .__                __________
              /  _  \ |  | |__| ____   ____   \____    /____   ____   ____
             /  /_\  \|  | |  |/ __ \ /    \    /     //  _ \ /    \_/ __ \
            /    |    \  |_|  \  ___/|   |  \  /     /(  <_> )   |  \  ___/
            \____|__  /____/__|\___  >___|  / /_______ \____/|___|  /\___  >
                    \/             \/     \/          \/          \/     \/


    -->

	<!------------------------------APPLICATION SETTINGS---------------------------->

	<app title="AlienZone2" file="AlienZone" main="alienzone.Main"  />
	
	<!--The flixel preloader is not accurate in Chrome. You can use it regularly if you embed the swf into a html file
	<!--or you can set the actual size of your file manually at "FlxPreloaderBase-onUpdate-bytesTotal"!-->
	<app preloader="flixel.system.FlxPreloader" />
	
	<!--Minimum without FLX_NO_GAMEPAD: 11.8, without FLX_NO_NATIVE_CURSOR: 11.2 -->
	<set name="SWF_VERSION" value="11.8" />
	
	<!--------------------------------WINDOW SETTINGS------------------------------->
	
	<!--These window settings apply to all targets-->
	<window width="320" height="480" fps="60" background="#000000" hardware="true" vsync="true" />

    <!--Web-specific-->
	<window if="web" orientation="portrait"  />
	
	<!--Desktop-specific-->
	<window if="desktop" orientation="portrait" fullscreen="false" resizable="true" />
	
	<!--Mobile-specific-->
	<window if="mobile" orientation="portrait" fullscreen="true" width="0" height="0" />
	
	<!--------------------------------PATHS SETTINGS-------------------------------->
	
	<set name="BUILD_DIR" value="bin" />
	<classpath name="src" />
    <assets path="res/fonts" rename="fonts" />
    <assets path="res/images" rename="images" />
    <assets path="res/sounds/sfx" rename="sfx" />
    <assets path="res/config" rename="config" />

	<!--------------------------------LIBRARIES------------------------------------->

    <haxelib name="flixel"/>


    <!--In case you want to use the addons package-->
	<!--haxelib name="flixel-addons" /-->
	
	<!--In case you want to use the ui package-->
	<!--haxelib name="flixel-ui"/-->
	
	<!--In case you want to use nape with flixel-->
	<!--haxelib name="nape" /-->

    <!-- From Zaphod's example -->
    <!-- Allow this setting to be overridden on the command-line -->
    <set name="RENDER_BLIT" if="flash || html5" unless="RENDER_TILE" />
    <set name="RENDER_TILE" unless="RENDER_BLIT" />

    <haxedef name="RENDER_BLIT" if="RENDER_BLIT" />
    <haxedef name="RENDER_TILE" if="RENDER_TILE" />
	<!--------------------------------HAXEDEFINES----------------------------------->

	<!--Enable the Flixel core recording system-->
	<!--haxedef name="FLX_RECORD" /-->
	
	<!--Disable the right and middle mouse buttons-->
	<!--haxedef name="FLX_NO_MOUSE_ADVANCED" /-->
	
	<!--Disable the Native cursor api for Flash target-->
	<!--haxedef name="FLX_NO_NATIVE_CURSOR" /-->
	
	<!--Optimise inputs, be careful you will get null errors if you don't use conditionals in your game-->
	<!--haxedef name="FLX_NO_MOUSE" if="mobile" /-->
	<!--haxedef name="FLX_NO_KEYBOARD" if="mobile" /-->
	<!--haxedef name="FLX_NO_TOUCH" if="desktop" /-->
	<!--haxedef name="FLX_NO_GAMEPAD" /-->
	
	<!--Disable the Flixel core sound tray-->
	<!--haxedef name="FLX_NO_SOUND_TRAY" /-->
	
	<!--Disable the Flixel sound management code-->
	<!--haxedef name="FLX_NO_SOUND_SYSTEM" /-->
	
	<!--Disable the Flixel core focus lost screen-->
	<!--haxedef name="FLX_NO_FOCUS_LOST_SCREEN" /-->
	
	<!--Disable the Flixel core debugger. Automatically gets set whenever you compile in release mode!-->
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	
	<!--Enable this for Nape release builds for a serious peformance improvement-->
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />
	
	<!--------------------------------CUSTOM---------------------------------------->
	
	<!--Place custom nodes like icons here (higher priority to override the HaxeFlixel icon)-->

    <!------------------------------ANDROID SETTINGS---------------------------->

    <template path="templates/AndroidManifest.xml" rename="AndroidManifest.xml" if="android"/>
    <template path="templates/res/values/ids.xml" rename="ids.xml" if="android"/>

    <icon path="templates/icons/icon36.png" size="36" if="android" />
    <icon path="templates/icons/icon48.png" size="48" if="android" />
    <icon path="templates/icons/icon72.png" size="72" if="android" />
    <icon path="templates/icons/icon96.png" size="96" if="android" />
    <icon path="templates/icons/icon144.png" size="144" if="android" />
    <icon path="templates/icons/icon192.png" size="192" if="android" />
    <icon path="templates/icons/icon.png" />
    <!--<include path="templates/certificate.xml" />-->


</project>
